<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_splash_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/fragment_splash_goto_welcome_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="invisible"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="@string/splash_into_welcome_str"
        android:textColor="@color/color_light_blue"
        android:textSize="25sp"
        android:background="@drawable/splash_into_welcome_selector"/>

    <RadioGroup
        android:id="@+id/fragment_splash_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|bottom"
        android:clickable="false"
        android:layout_marginBottom="10dp">
    </RadioGroup>

</FrameLayout>
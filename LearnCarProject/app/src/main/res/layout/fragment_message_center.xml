<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_message_center_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/fragment_message_center_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:clickable="true"
        android:background="@color/color_help_background_translucent">
        
        <TextView
            android:id="@+id/fragment_message_center_part_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:gravity="center"
            android:text="标题"
            android:textSize="18sp"
            android:textColor="@color/color_black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_weak_gray"/>
        
        <TextView
            android:id="@+id/fragment_message_center_part_date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/color_white"
            android:gravity="end|center_vertical"
            android:paddingRight="10dp"
            android:text="2018/4/18"
            android:textSize="12sp"
            android:textColor="@color/color_light_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_weak_gray"/>

        <TextView
            android:id="@+id/fragment_message_center_part_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:padding="20dp"
            android:gravity="center"
            android:text="内容"
            android:textSize="15sp"
            android:textColor="@color/color_black"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_message_center_remove_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/color_help_background_translucent">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="确认删除该条消息！"
            android:textSize="18sp"
            android:textColor="@color/color_black"
            android:background="@color/color_white"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_weak_gray"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_message_center_remove_part_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:gravity="center"
                android:text="取消"
                android:textSize="15sp"
                android:textColor="@color/color_light_gray"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_weak_gray"/>

            <TextView
                android:id="@+id/fragment_message_center_remove_part_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:gravity="center"
                android:text="确认"
                android:textSize="15sp"
                android:textColor="@color/color_black"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
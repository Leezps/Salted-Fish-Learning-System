<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_driver_trail_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/fragment_driver_trail_remove_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_help_background_translucent"
        android:gravity="center"
        android:visibility="gone"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_weak_gray" />

        <EditText
            android:id="@+id/fragment_driver_trail_remove_part_message"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/color_white"
            android:gravity="center"
            android:hint="删除订单理由(请填写)"
            android:padding="10dp"
            android:textColorHint="@color/color_light_gray"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_weak_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_driver_trail_remove_part_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textSize="20sp"
                android:textColor="@color/color_black"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_weak_gray" />

            <TextView
                android:id="@+id/fragment_driver_trail_remove_part_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="20sp"
                android:textColor="@color/color_light_gray"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
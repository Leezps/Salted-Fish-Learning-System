<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/fragment_order_driver_item_load_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="加载更多"
        android:textSize="15sp"
        android:textColor="@color/color_black"/>

    <ProgressBar
        android:id="@+id/fragment_order_driver_item_load_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/fragment_order_driver_item_load_content"
        android:indeterminateDrawable="@drawable/fragment_order_driver_item_load_progressbar"/>

</RelativeLayout>